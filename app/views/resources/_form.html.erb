<%= form_for(@resource, :html => { :class => "form-horizontal", 'ng-controller' => 'NewResourceCtrl' }) do |f| %>
  <% if @resource.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h4>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :type, ResourceType.all.map{|t| [t.name, t.key]}, {}, {:class => "form-control", 'ng-model' => 'type'} %>
    </div>
  </div>

  <div ng-if="type=='text_file'">
    <div class="form-group">
      <%= label_tag :text_file, nil, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <input type="file" class="form-control">
      </div>
    </div>
  </div>

  <div ng-if="type=='list_of_strings'">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-2">
        <div class="string-form" ng-repeat="(s, string) in strings">
          <div class="form-group">
            <label for="string_{{s}}" class="col-sm-2 control-label">
              String
            </label>
            <div class="col-sm-9">
              <input name="strings[{{s}}][string]" id="string_{{s}}" type="text" class="form-control" ng-model="string.string">
            </div>
            <div class="col-sm-1">
              <button ng-click="strings.splice(s, 1)" type="button" class="btn btn-danger">X</button>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
               <a ng-click="string.show_details = !string.show_details" ng-show="string.show_details">...less</a>
               <a ng-click="string.show_details = !string.show_details" ng-show="!string.show_details">more...</a>
            </div>
          </div>
          <div ng-show="string.show_details">
            <div class="form-group">
              <label for="key_{{s}}" class="col-sm-2 control-label">
                Key
              </label>
              <div class="col-sm-9">
                <input name="strings[{{s}}][key]" id="key_{{s}}" type="text" class="form-control" ng-model="string.key">
              </div>
            </div>
            <div class="form-group">
              <label for="comments_{{s}}" class="col-sm-2 control-label">
                Comments
              </label>
              <div class="col-sm-9">
                <textarea name="strings[{{s}}][comments]" id="comments_{{s}}" class="form-control" ng-model="string.comments"></textarea>
              </div>
            </div>
          </div>
        </div>
        <div class="pull-right">
          <button type="button" ng-click="strings.push({})" class="btn btn-default">+ string</button>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  function NewResourceCtrl($scope) {
    $scope.type = 'list_of_strings'
    $scope.strings = [{}]
  };
</script>
