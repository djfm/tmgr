<%= form_for(@project, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @project.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :deadline, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :deadline, {default: 7.days.from_now}, :class => "datetime_select" %>
    </div>
  </div>
  <% if @available_statuses %>
    <div class="form-group">
      <%= f.label :project_status_id, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :project_status_id, @available_statuses, {}, :class => "form-control" %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :comments, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :comments, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
